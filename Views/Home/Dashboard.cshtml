@model DashboardWrapper
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ShopApp Dashboard</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-10">
                <h1>Welcome to ShopApp</h1>
            </div>
            <div class="col-sm-2">
                <a href="/logout">Log Out</a>
            </div>
            </div>
            </div>
        <div class="row">
            <div class="col-sm-10">
                    @foreach(Store store in Model.AllStores){
                        <p><a href="stores/@store.StoreId">@store.StoreName in @store.Location </p>
                    }
            </div>
        </div>

            <div class="row">
                    <div class="col text-center">
                        <a href="/add/store" class="btn btn-warning btn-block mb-5">Add Store</a>
                        <a href="/allstores/" class="btn btn-warning btn-block mb-5">See all stores</a>
                    </div>
                </div>
                <div class="row">
                    <div class="col text-center">
                        <a href="/add/product" class="btn btn-warning btn-block mb-5">Add Product</a>
                        <a href="/allproducts" class="btn btn-warning btn-block mb-5">See all products</a>
                    </div>
                </div>
                <div class="row">
                    <div class="col text-center">
                        <a href="/allingredients" class="btn btn-warning btn-block mb-5">See all Ingredients</a>
                    </div>
                </div>
                <div class="row">
                    <div class="col text-center">
                        <a href="/allcategories" class="btn btn-warning btn-block mb-5">See all Categories</a>
                    </div>
                </div>
</body>
</html>